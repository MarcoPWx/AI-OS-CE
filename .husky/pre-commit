#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Ensure docs manifest is updated before commit
npm run docs:manifest || {
  echo "docs:manifest failed; please fix manifest generation" >&2
  exit 1
}
# Stage manifest if it changed
git add docs/docs-manifest.json 2>/dev/null || true

# Run lint-staged on staged files
npx lint-staged
