# QuizMentor Development Environment Configuration

# Supabase Configuration (Development)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_dev_anon_key
EXPO_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your_dev_service_role_key

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_API_VERSION=v1

# Mock Configuration (Development uses mocks by default)
EXPO_PUBLIC_USE_ALL_MOCKS=1
EXPO_PUBLIC_USE_WS_MOCKS=1
EXPO_PUBLIC_USE_MOCK_AUTH=1
USE_MOCKS=true
NX_USE_MOCK_AUTH=true
REACT_APP_USE_MOCK_AUTH=true

# WebSocket Configuration
EXPO_PUBLIC_WS_URL=ws://localhost:3001
WS_MOCK_SCENARIO=matchHappyPath

# Feature Flags (All enabled for development)
EXPO_PUBLIC_ENABLE_MULTIPLAYER=true
EXPO_PUBLIC_ENABLE_ACHIEVEMENTS=true
EXPO_PUBLIC_ENABLE_LEADERBOARD=true
EXPO_PUBLIC_ENABLE_PREMIUM=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# Analytics Configuration (Development)
EXPO_PUBLIC_ANALYTICS_KEY=dev_analytics_key
EXPO_PUBLIC_SENTRY_DSN=

# GitHub OAuth (Development)
GITHUB_CLIENT_ID=dev_github_client_id
GITHUB_CLIENT_SECRET=dev_github_client_secret

# Storage Configuration
EXPO_PUBLIC_STORAGE_BUCKET=quiz-media-dev

# Development Settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Performance (Relaxed for development)
EXPO_PUBLIC_CACHE_DURATION=60
EXPO_PUBLIC_MAX_RETRIES=1
EXPO_PUBLIC_TIMEOUT_MS=60000

# AI Services (Mock in development)
EXPO_PUBLIC_AI_SERVICE_URL=http://localhost:8080
EXPO_PUBLIC_AI_API_KEY=dev_ai_api_key

# Twitch Integration (Development)
EXPO_PUBLIC_TWITCH_CLIENT_ID=dev_twitch_client_id
EXPO_PUBLIC_TWITCH_CLIENT_SECRET=dev_twitch_client_secret

# SSE Demo Server
SSE_DEMO_PORT=3002

# Test Configuration
TEST_USER_EMAIL=dev@quizmentor.local
TEST_USER_PASSWORD=DevPassword123!
