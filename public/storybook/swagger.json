{
  "openapi": "3.0.3",
  "info": {
    "title": "QuizMentor API",
    "version": "0.1.0"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/lessons": {
      "get": {
        "summary": "List lessons",
        "responses": {
          "200": {
            "description": "List of lessons",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "lessons": { "type": "array", "items": { "$ref": "#/components/schemas/Lesson" } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/quizzes": {
      "get": {
        "summary": "List quizzes",
        "responses": {
          "200": {
            "description": "List of quizzes"
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "email": { "type": "string", "format": "email" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Auth token" }
        }
      }
    },
    "/api/cache": {
      "get": {
        "summary": "ETag-cached resource",
        "responses": {
          "200": {
            "description": "OK",
            "headers": {
              "ETag": { "schema": { "type": "string" } },
              "Cache-Control": { "schema": { "type": "string" } }
            }
          },
          "304": { "description": "Not Modified" }
        }
      }
    },
    "/api/ratelimit": {
      "get": {
        "summary": "Rate-limited endpoint",
        "responses": {
          "200": { "description": "OK" },
          "429": {
            "description": "Too Many Requests",
            "headers": {
              "Retry-After": { "schema": { "type": "string" } }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Lesson": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "progress": { "type": "number" }
        }
      }
    }
  }
}

