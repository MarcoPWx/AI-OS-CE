# QuizMentor Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Next.js Configuration (for web)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/quizmentor

# API Configuration
API_PORT=3001
API_HOST=localhost
API_BASE_URL=http://localhost:3001

# Authentication Configuration
JWT_SECRET=your-jwt-secret-key
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Analytics Configuration
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=your-ga-id

# Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=quizmentor-assets

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_PREMIUM_FEATURES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Environment
NODE_ENV=development
EXPO_PUBLIC_ENV=development

# App Configuration
APP_NAME=QuizMentor
APP_VERSION=1.0.0
APP_BUNDLE_ID=com.quizmentor.app

# Deep Linking
EXPO_PUBLIC_SCHEME=quizmentor
EXPO_PUBLIC_BUNDLE_ID=com.quizmentor.app

# Web Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Mobile Configuration
EXPO_PUBLIC_API_URL=http://localhost:3001

# Development Tools
EXPO_DEVTOOLS=true
REACT_NATIVE_DEBUGGER=true
