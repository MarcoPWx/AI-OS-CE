# QuizMentor Production Environment Configuration
# This file contains production-specific environment variables

# Environment
NODE_ENV=production
EXPO_PUBLIC_ENV=production

# Supabase Configuration (Production)
EXPO_PUBLIC_SUPABASE_URL=https://quizmentor-prod.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://quizmentor-prod.supabase.co
# Note: Actual keys should be set in deployment environment, not in files

# API Configuration (Production)
API_PORT=443
API_HOST=api.quizmentor.com
API_BASE_URL=https://api.quizmentor.com

# Web Configuration (Production)
NEXT_PUBLIC_APP_URL=https://quizmentor.com
NEXT_PUBLIC_API_URL=https://api.quizmentor.com

# Mobile Configuration (Production)
EXPO_PUBLIC_API_URL=https://api.quizmentor.com

# App Configuration (Production)
APP_NAME=QuizMentor
APP_VERSION=1.0.0
APP_BUNDLE_ID=com.quizmentor.app

# Deep Linking (Production)
EXPO_PUBLIC_SCHEME=quizmentor
EXPO_PUBLIC_BUNDLE_ID=com.quizmentor.app

# Feature Flags (Production)
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_PREMIUM_FEATURES=true

# Rate Limiting (Production - More restrictive)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Development Tools (Disabled in Production)
EXPO_DEVTOOLS=false
REACT_NATIVE_DEBUGGER=false

# Database Configuration (Production)
# Note: Use connection pooling and read replicas in production
DATABASE_URL=postgresql://postgres:password@prod-db.quizmentor.com:5432/quizmentor
DATABASE_POOL_SIZE=20
DATABASE_MAX_CONNECTIONS=100

# Redis Configuration (Production)
REDIS_URL=redis://prod-redis.quizmentor.com:6379
REDIS_CLUSTER_MODE=true

# File Storage (Production)
AWS_REGION=us-east-1
AWS_S3_BUCKET=quizmentor-prod-assets
AWS_CLOUDFRONT_DOMAIN=cdn.quizmentor.com

# Email Configuration (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587

# Security Configuration
CORS_ORIGINS=https://quizmentor.com,https://www.quizmentor.com
SECURE_COOKIES=true
HTTPS_ONLY=true
HSTS_MAX_AGE=31536000

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# CDN Configuration
STATIC_ASSETS_CDN=https://cdn.quizmentor.com
IMAGE_CDN=https://images.quizmentor.com

# Cache Configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400
API_CACHE_TTL=300
